<div class="padit">
	<div class="row-fluid">
		<div class="span12">
			<div class="">
				<table class="table table-striped league_table">
					<thead>
						<tr>
							<th align="left" width="10">#</th>
							<th align="left">Team</th>
							<th style="text-align:center">Played</th>
							<th style="text-align:center">Points</th>
							<th style="text-align:center">Wins</th>
							<th style="text-align:center">Loss</th>
							<th style="text-align:center">Ties</th>
							<th style="text-align:center">Net R.R.</th>
						</tr>   
					</thead>     

					<% @league.league_statuses.each do |league_status| %>
					<tr>
						<td><%= league_status.position; %></td>
						<td><%= link_to league_status.team.name, team_path(league_status.team); %></td>
						<td style="text-align:center"><%= league_status.matches_played; %></td>
						<td style="text-align:center"><%= league_status.points; %></td>
						<td style="text-align:center"><%= league_status.wins; %></td>
						<td style="text-align:center"><%= league_status.losses; %></td>
						<td style="text-align:center"><%= league_status.ties; %></td>
						<td style="text-align:center"><%= league_status.run_rate.blank? ? 0.00 : league_status.run_rate; %></td>
					</tr>
					<% end %>
				</table>
			</div>

			<div class="m30">
				<ul class="player_matches">
				<% Match.all.each do |match| %>
					<li class="league">
						<span class="match_date">
							<span class="date"><%= match.start_time.strftime('%d') %></span>
							<span class="month"><%= match.start_time.strftime('%b') %></span>
						</span>

						<%= render :partial => '/matches/result_string', :locals => {match: match} %>
						<br clear="all" />
					</li>
				<% end %>
				</ul>

			</div>
			
		</div> <!--end span12 -->
		<br clear="all" />
	</div>
</div>